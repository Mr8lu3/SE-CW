doctype html
html(lang="en")
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Error - Game Sharing Tips & Tricks
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        background-color: #010101;
        color: #FEFDFD;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
      
      .error-container {
        background-color: rgba(58, 49, 83, 0.6);
        padding: 25px;
        border-radius: 10px;
        text-align: center;
        max-width: 600px;
        backdrop-filter: blur(5px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      }
      
      h1 {
        color: #FF6B6B;
        margin-bottom: 20px;
      }
      
      .error-message {
        margin-bottom: 20px;
        font-size: 1.2em;
      }
      
      .home-button {
        padding: 15px 25px;
        background-color: #5F43B2;
        color: #FEFDFD;
        border: none;
        border-radius: 5px;
        font-size: 1.1em;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
        margin-top: 20px;
      }
      
      .home-button:hover {
        background-color: #3A3153;
        transform: translateY(-2px);
      }
      
      .error-details {
        margin-top: 30px;
        color: #AAAAAA;
        font-size: 0.9em;
        text-align: left;
        background-color: rgba(0, 0, 0, 0.5);
        padding: 15px;
        border-radius: 5px;
        max-height: 200px;
        overflow-y: auto;
        width: 100%;
      }

  body
    .error-container
      h1 Oops! Something went wrong
      .error-message #{message || 'An unexpected error occurred'}
      a.home-button(href="/") Return to Home
      
      if error && error.stack
        .error-details
          pre #{error.stack}