        margin-top: 30px;
        text-align: left;
      }
      
      .game-selection h3 {
        color: #8C6EFF;
        margin-bottom: 15px;
      }
      
      .select2-container--default {
        width: 100% !important;
      }
      
      .select2-container--default .select2-selection--single,
      .select2-container--default .select2-selection--multiple {
        background-color: rgba(51, 51, 51, 0.7) !important;
        border: 1px solid rgba(95, 67, 178, 0.3) !important;
        border-radius: 5px !important;
        color: #fff !important;
      }
      
      .select2-container--default .select2-selection--multiple .select2-selection__choice {
        background-color: rgba(95, 67, 178, 0.7) !important;
        color: #fff !important;
        border: 1px solid rgba(95, 67, 178, 0.5) !important;
        border-radius: 3px !important;
        padding: 5px 8px !important;
      }
      
      .select2-container--default .select2-results__option--highlighted[aria-selected] {
        background-color: #5F43B2 !important;
      }
      
      .select2-container--default .select2-results__option[aria-selected=true] {
        background-color: rgba(95, 67, 178, 0.5) !important;
      }
      
      .select2-container--open .select2-dropdown {
        background-color: rgba(34, 34, 34, 0.95) !important;
        border: 1px solid rgba(95, 67, 178, 0.5) !important;
      }
      
      .select2-container--default .select2-results__option {
        color: #fff !important;
      }
      
      .select2-search__field {
        color: #fff !important;
        background-color: rgba(51, 51, 51, 0.7) !important;
      }
      
      .game-list {
        margin-top: 20px;
      }
      
      .game-item {
        display: inline-block;
        background-color: rgba(95, 67, 178, 0.6);
        color: white;
        padding: 8px 15px;
        margin: 5px;
        border-radius: 20px;
        font-weight: bold;
        transition: all 0.3s ease;
      }
      
      .game-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
        background-color: rgba(95, 67, 178, 0.8);
      }

